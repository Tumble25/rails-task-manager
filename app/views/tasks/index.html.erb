
  <h1>All tasks</h1>
<% @tasks.each do |task| %>
<% if task.completed %>
    <input type="checkbox" checked="true"> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", destroy_task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<% else %>
    <input type="checkbox"> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", destroy_task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<% end %>
<%= link_to "Add task", new_task_path %>
<% end %>

